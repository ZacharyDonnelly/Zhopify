{
  "name": "zhopify",
  "version": "0.1.0",
  "private": true,
  "keywords": [
    "Next.js",
    "Next 14",
    "Next-Auth",
    "React",
    "React server components",
    "React client components",
    "React hooks",
    "TypeScript",
    "Jest",
    "SASS",
    "Prisma",
    "Cypress",
    "mongodb",
    "Google",
    "Github",
    "JavaScript",
    "mongo",
    "ecommerce"
  ],
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "next lint",
    "lint:fix": "eslint ./app --fix && yarn format",
    "lint:all": "npm-run-all --parallel lint:strict lint:format",
    "lint:format": "prettier --write 'app/*.{js,jsx,ts,tsx,css}'",
    "lint:md": "markdownlint-cli2 **/*.{md,mdx}",
    "lint:ts": "eslint --ext .ts,.tsx,.js, .",
    "lint:ts:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix .",
    "lint:strict": "eslint --max-warnings=0 --ext .ts,.tsx --fix ./app",
    "start": "next start",
    "typecheck": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "5.20.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "daisyui": "^4.12.12",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^2.5.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "next-auth": "^4.24.8",
    "npm-run-all2": "^6.2.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "prisma": "^5.20.0",
    "scriptlint": "^3.0.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:all && yarn typecheck"
    }
  },
  "scriptlint": {
    "strict": true,
    "rules": {
      "uses-allowed-namespace": false
    }
  }
}
